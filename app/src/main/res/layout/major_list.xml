<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ECEAEA">



    <androidx.cardview.widget.CardView
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:background="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.499">


            <ImageView
                android:id="@+id/major_img"
                android:layout_width="27dp"
                android:layout_height="25dp"
                app:layout_constraintEnd_toStartOf="@+id/major_title"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/singlemajor"
                tools:layout_editor_absoluteY="1dp" />


            <TextView
                android:id="@+id/major_title"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginStart="33dp"
                android:layout_marginTop="1dp"
                android:text="단과대학 이름"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/each_major_txt"
                android:layout_width="157dp"
                android:layout_height="21dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:text="각 학과 이름"
                android:textColor="#000000"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--            <androidx.recyclerview.widget.RecyclerView-->
            <!--                android:id="@+id/major_recycler_view"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                app:layout_constraintBottom_toBottomOf="parent" />-->


            <ImageView
                android:id="@+id/toggle"
                android:layout_width="42dp"
                android:layout_height="31dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.073"
                app:srcCompat="@android:drawable/ic_menu_more" />

            <ImageView
                android:id="@+id/each_major_img"
                android:layout_width="22dp"
                android:layout_height="21dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toStartOf="@+id/each_major_txt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/major_img"
                app:srcCompat="@drawable/majorimg" />

            <ImageView
                android:id="@+id/alarm"
                android:layout_width="21dp"
                android:layout_height="19dp"
                android:layout_marginBottom="92dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/each_major_txt"
                app:srcCompat="@android:drawable/ic_lock_idle_alarm" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>