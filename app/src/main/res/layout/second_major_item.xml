<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



<!--    //카드뷰-->
    <androidx.cardview.widget.CardView
        android:id="@+id/page2_1_cardview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp">

<!--        //가로로 정렬-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#F3F3F3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="5dp">
<!--                android:background="@drawable/box_round"-->


                <ImageView
                    android:id="@+id/no_image"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/majorimg" />
            </LinearLayout>


<!--            //텍스트-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:layout_margin="5dp">

<!--                //관광지 종류-->
                <TextView
                    android:id="@+id/cardview_type"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:gravity="bottom"
                    android:text="역사"/>

<!--                //관광지 이름-->
                <TextView
                    android:id="@+id/cardview_title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:gravity="top"
                    android:text="경복궁"/>

            </LinearLayout>


<!--            //하트-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:id="@+id/cardview_heart"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:background="@drawable/baseline_favorite_24" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>