<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MajorActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_majorList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="3dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/majorButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.653" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="227dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/rv_majorList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mainlogo" />

    <ImageButton
        android:id="@+id/homeButton"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginEnd="40dp"
        android:background="#FEFEFE"
        android:padding="0sp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/majorButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/majorButton"
        app:srcCompat="@drawable/baseline_home_24" />

    <TextView
        android:id="@+id/home_tv"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_marginTop="3dp"
        android:text="홈"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/homeButton"
        app:layout_constraintStart_toStartOf="@+id/homeButton"
        app:layout_constraintTop_toBottomOf="@+id/homeButton" />

    <TextView
        android:id="@+id/major_tv"
        android:layout_width="73dp"
        android:layout_height="20dp"
        android:layout_marginBottom="8dp"
        android:text="학과"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/heart_tv"
        android:layout_width="55dp"
        android:layout_height="20dp"
        android:layout_marginTop="3dp"
        android:text="관심목록"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/heartButton"
        app:layout_constraintStart_toStartOf="@+id/heartButton"
        app:layout_constraintTop_toBottomOf="@+id/heartButton" />

    <ImageButton
        android:id="@+id/majorButton"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginBottom="3dp"
        android:background="#FEFEFE"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/major_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/baseline_subject_24"
        app:tint="#5069F0" />

    <ImageButton
        android:id="@+id/heartButton"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginStart="40dp"
        android:background="#FEFEFE"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/majorButton"
        app:layout_constraintTop_toTopOf="@+id/majorButton"
        app:srcCompat="@drawable/baseline_favorite_24" />


</androidx.constraintlayout.widget.ConstraintLayout>